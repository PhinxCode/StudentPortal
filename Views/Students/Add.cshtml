<style>
    .form-label {
        color: white;
    }

    .mb-4 {
        color: white;
    }

    .floating-container {
        margin: 80px auto;
        max-width: 65%;
        border-radius: 40px;
        border-bottom-left-radius: 350px;
        overflow: hidden;
        background-color: #1e1e1e;
        box-shadow:
            0 5px 15px rgba(255, 255, 255, 0.4),
            0 25px 50px rgba(0, 0, 0, 0.8);
        border-bottom: 5px solid white;
    }

    .image-bg {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .form-content {
        padding: 20px;
        /* Reduce padding para hacerlo más compacto */
    }

    .page-background {
        background: linear-gradient(to right, black 50%, black 50%, rgb(73, 73, 73) 0%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Asegurar margen inferior adicional para separación */
    .footer-space {
        margin-bottom: 50px;
    }
</style>

<div class="page-background">
    <div class="container d-flex align-items-center justify-content-center footer-space">
        <div class="row floating-container">
            <!-- Lado izquierdo: Imagen como fondo -->
            <div class="col-md-6 d-flex align-items-center justify-content-center bg-dark position-relative"
                style="padding: 0; border-top-left-radius: 40px; border-bottom-left-radius: 40px;">
                <img src="https://www.desktophut.com/images/1736778575.webp" alt="Student Image" class="image-bg">
            </div>

            <!-- Lado derecho: Formulario -->
            <div class="col-md-6 form-content">
                <h1 class="mb-4">Formulario</h1>
                <form method="post">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" id="Name" name="Name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" id="Email" name="Email" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="Phone" class="form-label">Phone</label>
                        <input type="tel" id="Phone" name="Phone" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="DateOfBirth" class="form-label">Date of Birth</label>
                        <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="Address" class="form-label">Descripción</label>
                        <textarea id="Address" name="Address" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" id="Subscribed" name="Subscribed" class="form-check-input">
                        <label for="Subscribed" class="form-check-label">Subscribe to newsletter</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
