@model StudentPortal.Models.Entities.Student

@if (Model is null)
{
    <div class="d-flex justify-content-center align-items-center vh-100">
        <p class="text-danger fs-4">No Student was found with this Id</p>
    </div>
}
else
{
    <style>
        body {
            background-color: #333;
            color: #fff;
            font-family: Arial, sans-serif;
        }

        .form-container {
            max-width: 800px;
            width: 100%;
            height: 60vh;
            /* Ajuste para que todo quepa sin scroll */
            padding: 20px;

            margin: 3% auto;
            /* Ajuste para subir más el contenedor */
        }

        .form-control {
            background: #444;
            border: 1px solid #555;
            color: #fff;
            padding: 6px;
            font-size: 12px;
            border-radius: 5px;
        }

        .form-control:focus {
            border-color: #17a2b8;
            background: #555;
            outline: none;
        }

        .btn-custom {
            background: #17a2b8;
            border: none;
            color: #fff;
            font-size: 14px;
            padding: 8px;
            border-radius: 8px;
            width: 100%;
        }

        .btn-custom:hover {
            background: #138496;
        }

        label {
            font-weight: bold;
            font-size: 12px;
        }

        h2 {
            font-size: 20px;
            text-align: center;
            margin-bottom: 10px;
        }

        .container-wrapper {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 90vh;
        }

        .mb-2 {
            margin-bottom: 10px;
        }
    </style>

    <div class="container-wrapper">
        <form method="post" class="form-container">
            <h2>Editar Estudiante</h2>

            <div class="mb-2">
                <label for="FirstName" class="form-label">First Name</label>
                <input type="text" id="FirstName" name="FirstName" class="form-control" required asp-for="FirstName">
            </div>

            <div class="mb-2">
                <label for="LastName" class="form-label">Last Name</label>
                <input type="text" id="LastName" name="LastName" class="form-control" required asp-for="LastName">
            </div>

            <div class="mb-2">
                <label for="Phone" class="form-label">Phone</label>
                <input type="tel" id="Phone" name="Phone" class="form-control" required asp-for="Phone">
            </div>

            <div class="mb-2">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" required asp-for="Email">
            </div>

            <div class="mb-2">
                <label for="Address" class="form-label">Address</label>
                <input type="text" id="Address" name="Address" class="form-control" required asp-for="Address">
            </div>

            <div class="mb-2">
                <label for="DateOfBirth" class="form-label">Date of Birth</label>
                <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" required asp-for="DateOfBirth">
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" id="Subscribed" name="Subscribed" class="form-check-input" asp-for="Subscribed">
                <label for="Subscribed" class="form-check-label">Subscribe to newsletter</label>
            </div>

            <button type="submit" class="btn btn-custom">Save</button>
        </form>
    </div>
}
