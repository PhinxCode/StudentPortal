@{
}

@model List<StudentPortal.Models.Entities.Student>

<div class="container mt-5">
    <h1 class="text-center text-white mb-4">Lista De Estudiantes</h1>

    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered shadow-lg">
            <thead class="table-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Email</td>
                        <td>@student.Phone</td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




</table>