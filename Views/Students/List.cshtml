@{
}

@model List<StudentPortal.Models.Entities.Student>

<h1> Students </h1>

<table class="">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Email</td>
                <td> <a>Edit</a></td>
            </tr>
        }
    </tbody>



</table>