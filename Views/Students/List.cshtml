@model List<StudentPortal.Models.Entities.Student>

<div class="container mt-5">
    <h1 class="text-center text-white mb-4">Lista De Estudiantes</h1>

    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered shadow-lg">
            <thead class="table-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Email</td>
                        <td>@student.Phone</td>
                        <td>
                            <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id"
                                class="btn btn-sm btn-warning">Edit</a>

                            <form asp-controller="Students" asp-action="Delete" method="post" style="display:inline;"
                                onsubmit="return confirm('Are you sure you want to delete this student?');">
                                @Html.AntiForgeryToken() <!-- Protección CSRF -->
                                <input type="hidden" name="id" value="@student.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
